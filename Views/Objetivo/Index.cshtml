@{
}
@model IEnumerable<TODOList.Models.Objetivo>

<h2>Lista de Objetivos</h2>

<a class="btn btn-primary" href="/Objetivo/Create">Criar novo objetivo</a>

<ul class="list-group mt-3">
    @foreach (var objetivo in Model)
    {
        <li class="list-group-item">
            <input class="form-check-input me-1" type="checkbox" @(objetivo.Completo ? "checked" : "") />
            <label class="form-check-label">@objetivo.Nome</label>
            <!-- Link para Editar -->
            <a class="btn btn-warning float-end"
               asp-controller="Objetivo"
               asp-action="Edit"
               asp-route-id="@objetivo.Id">
                Editar
            </a>
        </li>
    }
</ul>

